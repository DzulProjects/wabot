# WABOT Application Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# Proxy Configuration (set to true when behind reverse proxy/load balancer)
TRUST_PROXY=false

# AI Service Configuration
# Option 1: Google Gemini (currently configured)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Option 2: OpenAI (alternative)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-3.5-turbo

# n8n Webhook Configuration
N8N_WEBHOOK_URL=your_n8n_webhook_url_here

# Public WABOT Webhook URL for n8n (used in n8n workflow expressions)
# n8n will use this if set, otherwise workflows fall back to http://localhost:3000/webhook/message
WABOT_WEBHOOK_URL=https://your-wabot-domain.com/webhook/message

# WhatsApp API Configuration (wabot.my)
WABOT_API_URL=https://wabot.my/api
WABOT_INSTANCE_ID=your_instance_id_here
WABOT_ACCESS_TOKEN=your_access_token_here

# CORS Configuration (add your production domain)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Security
SESSION_SECRET=your_random_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MySQL Database Configuration
# Required for advanced AI chatbot features
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=wabot_ai

# KWAP Pension Inquiry Configuration
# Malaysian KWAP (Kumpulan Wang Persaraan) API for pension information
KWAP_API_KEY=your_kwap_api_key_here
KWAP_API_URL=https://apim.kwap.my/ws/PortalServiceInquireEmass/1.0

# Poslaju Tracking API Configuration
# POS Malaysia parcel tracking service for Rasumi company
POSLAJU_CLIENT_ID=605840cf-ecd7-4803-b2cc-875469b7d548
POSLAJU_CLIENT_SECRET=d41dd72c-d339-4060-8982-05065189269c
POSLAJU_API_URL=https://api-dev.pos.com.my

# Note: If no AI keys are provided, chatbot will use simple rule-based responses
# Database integration will still work for knowledge base and conversation storage
